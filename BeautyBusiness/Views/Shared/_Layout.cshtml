<!DOCTYPE html>

<style>
  ul > li {
  font-weight: bold;
}  
</style>

<html lang="en">


<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1">
   
    <title>@ViewBag.Title - Cariad Nails</title>
    <!-- Loading third party fonts -->
    <link href="~/Content/customer/fonts/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/customer/fonts/novecento-font/novecento-font.css" rel="stylesheet" type="text/css">
    <!-- Loading main css file -->
    <link rel="stylesheet" href="~/Content/customer/style.css">

    <!--[if lt IE 9]>
    <script src="js/ie-support/html5.js"></script>
    <script src="js/ie-support/respond.js"></script>
    <![endif]-->


</head>


<body>

    <div id="site-content">


        <header class="site-header">
            <div class="container">
                <a id="branding" href="/Home/Home/">
                    <img src="~/Content/customer/images/beauty_hair.jpg" alt="BeautyBusiness" class="logo" style="height: 44px; width: 44px;" />                  
                    <div class="logo-copy">
                        <h1 class="site-title">Cariad Beauty</h1>
                        <small class="site-description">Your Beauty Is Our Duty</small>
                    </div>
                </a> 
                <!-- For navigation -->
                <div class="main-navigation">
                    <button type="button" class="menu-toggle"><i class="fa fa-bars"></i></button>
                    <ul class="menu">
                        <li class="menu-item"><a href="/Home/Home/">Home</a></li>

                        <li class="menu-item"><a href="/Home/About/">About</a></li>
                        <li class="menu-item"><a href="/customerService/Index/">Browse Services and Booking</a></li>
                        <li class="menu-item"><a href="/Gallary/Index/">Gallery</a></li>
                        <li class="menu-item"><a href="/Home/Contact">Contact</a></li>
                        
                        @if (Session["CustomerID"] != null)
                        {
                            <li class="menu-item"><a href="/CustomAccount/CustomerLogout"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
                            <li class="menu-item"><a href="/CustomAccount/Index/"><span class="glyphicon glyphicon-log-in"></span> My Account</a></li>


                        }
                        else
                        {
                        <li class="menu-item"><a href="/Customer/Signup"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                        <li class="menu-item"><a href="/Customer/CustomerLogin/"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                        }
                    </ul> <!-- .menu -->

                  



                </div> <!-- .main-navigation -->



                <div class="mobile-navigation"></div>
            </div>
           
       </header>

      

        @RenderBody()

        <footer class="site-footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <div class="widget contact-widget">
                            <h3 class="widget-title">Contact</h3>
                            <div class="contact-info">
                                <address>
                                    <img src="~/Content/customer/images/icon-contact-globe.png" class="icon">
                                    <p><strong>Cariad Nails</strong>- 74 High Street Mold CH7 1BH Wales</p>
                                </address>
                                <a href="mailto:contact@companyname.com" class="mail"><img src="~/Content/customer/images/icon-envelope-small.png" class="icon">Cariadnail123@gmail.comm</a>
                                <a href="tel:01352 759576" class="phone"><img src="~/Content/customer/images/icon-phone-small.png" class="icon">01352759576</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="widget">
                            <h3 class="widget-title">Social Media</h3>
                            <p>Link with us via Following Social media  </p>
                            <div class="social-links">
                                <a href="https://en-gb.facebook.com/Cariad-nails-1284208434974766/"><i class="fa fa-facebook"></i></a>
                                
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="widget">
                            @*<h3 class="widget-title">About Us</h3>*@
                            @*<p>Cariad Nails</p>*@
                           
                        </div>
                    </div>
                </div>
                <div class="colophon">
                    <p>Copyright 2018 Cariad Nails. All rights reserved.</p>
                </div>
            </div>
        </footer>

</div>
       

    <script src="~/Content/customer/js/jquery-1.11.1.min.js"></script>
    <script src="~/Content/customer/js/plugins.js"></script>
    <script src="~/Content/customer/js/app.js"></script>
</body>
</html>
